<?xml version="1.0"?>
<portlets>

  <assignment
      manager="plone.rightcolumn"
      category="context"
      key="/"
      type="collective.calltoaction.CallToActionPortlet"
      name="calltoaction"
      >
    <property name="header">My popup header</property>
    <property name="text">My popup text</property>
    <property name="omit_border">False</property>
    <property name="footer">My popup footer</property>
    <property name="more_url">http://plone.org/</property>
    <property name="milli_seconds_until_popup">1000</property>
  </assignment>

</portlets>
