<dl class="portlet portletCallToActionPortlet"
    i18n:domain="collective.calltoaction">

    <dt class="portletHeader" tal:condition="view/data/header|nothing">
        <span class="portletTopLeft"></span>
        <h2 tal:content="view/data/header" />
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        Body text
    </dd>

    <dd class="portletFooter" tal:condition="view/data/header|nothing">
        <span class="portletBottomLeft"></span>
        Footer
        <span class="portletBottomRight"></span>
    </dd>

</dl>
